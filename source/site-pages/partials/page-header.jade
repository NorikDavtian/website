if MainHeader
	header#page-header.page-header
		.container
			.row
				.col-12.col-desktop-4
					figure.page-logo
						a(href="index.html"): img(src="assets/images/logo.svg", width="233", height="70", alt="")
				.col-12.col-desktop-8
					nav.page-nav
						ul.page-nav__list
							li.page-nav__item
								a(href="about.html" title="Learn more about us").page-nav__link About
							li.page-nav__item
								a(href="blog.html" title="Thoughts on usage of graph database.").page-nav__link Blog
							li.page-nav__item
								a(href="https://discuss.dgraph.io" title="Head over to our Discourse community" target="_blank").page-nav__link.link-alias Discourse
							li.page-nav__item
								a(href="http://slack.dgraph.io/" title="Head over to our Slack community" target="_blank").page-nav__link.link-alias Slack
							li.page-nav__item
								a(href="https://github.com/dgraph-io/dgraph" title="GihHub repository" target="_blank").button.button--outline.page-nav__link.page-nav__link--button Download
							li.page-nav__item
								include misc/git-hub-star
						
						.github-star--mobile
							include misc/git-hub-star
				
				a(href="javascript:void(0)", title="Site Navigation")#page-nav-button.button.page-nav-button Menu

