								a(href="contact.html" title="How can you reach us").page-nav__link Contact
							li.page-nav__item
								a(href="blog.html" title="Thoughts on usage of graph database.").page-nav__link Blog
							li.page-nav__item
								a(href="https://github.com/dgraph-io/dgraph" title="GihHub repository").button.button--outline.page-nav__link.page-nav__link--button Download
							li.page-nav__item
								include misc/git-hub-star

				a(href="javascript:void(0)", title="Site Navigation")#page-nav-button.button.page-nav-button Menu

