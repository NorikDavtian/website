									use(xlink:href="#icon-label" xmlns:xlink="http://www.w3.org/1999/xlink")
								| Labels
								svg.icon.icon-dropdown
									use(xlink:href="#icon-dropdown" xmlns:xlink="http://www.w3.org/1999/xlink")
						
						.blog-nav__item
							a(href="#blog-archive").blog-nav__dropdown.js-granular-trigger
