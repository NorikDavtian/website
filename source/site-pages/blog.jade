						.blog-nav__item.blog-nav__item--large
							form(action="").blog-nav__form
								input(type="text" placeholder="Search blog").blog-nav__input
						
						.blog-nav__item
							a(href="#blog-labels").blog-nav__dropdown.js-granular-trigger
